<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="loginViewModel"
            type="com.adsale.ChinaPlas.viewmodel.LoginViewModel" />

        <variable
            name="activity"
            type="com.adsale.ChinaPlas.ui.LoginActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="@{loginViewModel.isSmsShow.get()?View.INVISIBLE:View.VISIBLE}">

            <TextView
                android:id="@+id/tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/login_text1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_loginName"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/tv"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/login_text2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignTop="@id/tv_loginName"
                android:layout_toEndOf="@id/tv_loginName"
                android:layout_toRightOf="@id/tv_loginName"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/phoneLogin"
                android:singleLine="true"
                android:text="@={loginViewModel.loginEmail}" />

            <!--// 手机号-->
            <TextView
                android:id="@+id/tv_loginPhone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/tv_loginName"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/phoneLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignTop="@id/tv_loginPhone"
                android:layout_toEndOf="@id/tv_loginPhone"
                android:layout_toRightOf="@id/tv_loginPhone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:nextFocusDown="@+id/passwordLogin"
                android:singleLine="true"
                android:text="@={loginViewModel.loginPhone}" />

            <TextView
                android:id="@+id/tv_loginPwd"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/tv_loginPhone"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/login_text3"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/emailLogin"
                android:layout_alignStart="@id/emailLogin"
                android:layout_alignTop="@id/tv_loginPwd"
                android:layout_toEndOf="@id/tv_loginPwd"
                android:layout_toRightOf="@id/tv_loginPwd"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text="@={loginViewModel.loginPwd}" />


            <Button
                android:id="@+id/btn_login"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_below="@id/tv_loginPwd"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/bttn_red"
                android:onClick="@{() -> loginViewModel.onPwdLogin()}"
                android:text="@string/login_text4"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sms_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_login"
                android:layout_toRightOf="@id/btn_login"
                android:onClick="@{() -> loginViewModel.switchToSMSLogin()}"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="短信验证码登录"
                android:textColor="@color/color_m5m6" />


            <TextView
                android:id="@+id/regNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="@{()->activity.toRegister()}"
                android:text="@string/login_text6"
                android:textColor="#fe4b10"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regNow"
                android:clickable="true"
                android:onClick="forgotPwAction"
                android:padding="10dp"
                android:text="@string/login_text5"
                android:textColor="#fe4b10"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="@{loginViewModel.isDialogShow?View.VISIBLE:View.GONE}" />
        </RelativeLayout>

        <!--<FrameLayout-->
        <!--android:id="@+id/frame_login"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone"-->
        <!--/>-->

        <RelativeLayout
            android:id="@+id/rl_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="@{loginViewModel.isSmsShow.get()?View.VISIBLE:View.INVISIBLE}">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:hint="邮箱"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/tv_tel"
                android:text="@={loginViewModel.loginEmail}" />

            <EditText
                android:id="@+id/tv_tel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:hint="手机号码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:layout_below="@id/et_email"
                android:nextFocusDown="@+id/btn_get_code"
                android:text="@={loginViewModel.loginPhone}" />


            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_tel"
                android:background="@{loginViewModel.isBtnCanGetCode?@color/menu_red:@color/grey}"
                android:clickable="@{loginViewModel.isBtnCanGetCode?true:false}"
                android:onClick="@{() -> loginViewModel.sendCode()}"
                android:text="发送验证码"
                android:textColor="@{loginViewModel.isBtnCanGetCode?@color/white:@color/black}" />


            <EditText
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/tv_tel"
                android:layout_toLeftOf="@id/btn_get_code"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:text="@={loginViewModel.loginCode}" />

            <Button
                android:id="@+id/btn_sms_login"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_below="@id/tv_code"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_red2"
                android:onClick="@{() -> loginViewModel.onSmsLogin()}"
                android:text="@string/login_text4"
                android:textColor="#ffffff"
                android:textSize="14sp" />


        </RelativeLayout>


    </RelativeLayout>


</layout>