<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.adsale.ChinaPlas.data.model.ConcurrentEvent.Pages" />

        <variable
            name="eventModel"
            type="com.adsale.ChinaPlas.viewmodel.EventModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:onClick="@{() -> eventModel.onItemClick(obj.pageID)}"
        >

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:gravity="center_vertical"
           android:text="@{obj.getTitle()}"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/iv_event_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_event_time"
            android:layout_below="@id/tv_event_title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignTop="@id/iv_event_time"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_event_time"
            android:gravity="center_vertical"
            android:text="@{obj.duration}" />

        <ImageView
            android:id="@+id/iv_event_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/iv_event_time"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_event_location" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignTop="@id/iv_event_location"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_event_location"
            android:gravity="center_vertical"
            android:text="@{obj.location}" />


    </RelativeLayout>

</layout>