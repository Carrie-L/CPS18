<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/travelImgContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_travel_endorsed"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_travelInfo_hotel"
        android:layout_width="100dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tv_travelInfo_hotel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_travelInfo_hotel"
        android:gravity="center_vertical"
        android:textColor="@color/grey11" />

</RelativeLayout>