    -->


    <!-- 设置进度条颜色图像资源 -->
    <!--
         <item
        android:id="@android:id/progress"
        android:drawable="@drawable/progress_secondary_holo_light"/>

    -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8.0dip" />

            <gradient
                android:angle="270.0"
                android:endColor="@color/grey_font"
                android:startColor="@color/grey_font" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/tiffany"
                    android:endColor="@color/tiffany"
                    android:startColor="@color/tiffany" />
            </shape>
        </clip>
    </item>

</layer-list>