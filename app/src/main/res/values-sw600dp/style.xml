<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white_smoke</item>
        <item name="android:windowAnimationStyle">@style/ActivitySiwtchAnimation</item>
        <item name="android:textColorPrimary">@color/grey11</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey11</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ActivitySiwtchAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
      <!--   <item name="@android:windowEnterAnimation"></item>
        <item name="@android:windowExitAnimation"></item> -->
        <!--
        <item name="@android:fragmentOpenEnterAnimation">@animator/slide_left_enter</item>
        <item name="@android:fragmentOpenExitAnimation">@animator/slide_left_exit</item>
        <item name="@android:fragmentCloseEnterAnimation">@animator/slide_right_enter</item>
        <item name="@android:fragmentCloseExitAnimation">@animator/slide_right_exit</item>

        -->
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="Dialog_No_Border">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="HoloLightDialog_No_Border" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!--更新中心 更新全部按鈕-->
    <style name="update_all_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">240dp</item>
        <item name="android:layout_marginRight">240dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:text">@string/uc_update_all</item>
        <item name="android:gravity">center</item>
    </style>


</resources>